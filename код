#include <math.h>
#include <Windows.h>
#include <iostream>
using namespace std;
int main() {
	SetConsoleCP(1251);
	SetConsoleOutputCP(1251);
        int n;
        cout << "Введіть число для обчислення факторіалу: ";
        cin >> n;
        if (n < 0) {
            cout << "Факторіал для від'ємних чисел не може бути." << endl;
            return 1;
        }
        int factorial = 1;
        int i = 1;
        while (i <= n) {
            factorial *= i;  
           i++;             
        }
        if (i > n);
        cout << "Факторіал числа " << n << " дорівнює: " << factorial << endl;
        return 0;
 }


